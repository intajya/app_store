<odoo>
<record id="view_task_form_inherit_timer" model="ir.ui.view">
    <field name="name">project.task.form.timer</field>
    <field name="model">project.task</field>
    <field name="inherit_id" ref="project.view_task_form2"/>
    <field name="arch" type="xml">
        <xpath expr="//header" position="inside">
            <button name="action_timer_start"
                    type="object"
                    string="Start"
                    invisible="timer_start"
                    class="btn-primary"/>
            <button name="action_timer_stop"
                    type="object"
                    string="Stop"
                    invisible="not timer_start"
                    class="btn-danger"/>
        </xpath>
    </field>
</record>
</odoo>