<odoo>
     <record id="view_move_tree_inherit_payment_type" model="ir.ui.view">
        <field name="name">account.move.tree.inherit.payment.type</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//list" position="inside">
                <field name="payment_method_type"/>
            </xpath>
        </field>
    </record>

    <record id="view_move_search_inherit_payment_type" model="ir.ui.view">
        <field name="name">account.move.search.inherit.payment.type</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_move_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <group expand="0" string="Group By">
                    <filter name="group_by_payment_method_type" string="Payment Type" context="{'group_by': 'payment_method_type'}"/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="view_move_form_inherit_payment_type" model="ir.ui.view">
        <field name="name">account.move.form.inherit.payment.type</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_date']" position="after">
                <field name="payment_method_type"/>
            </xpath>
        </field>
    </record>
</odoo>
