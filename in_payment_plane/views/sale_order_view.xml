<odoo>
    <record id="view_order_form_inherit_payment_plan" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.payment.plan</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet//div[@name='button_box']" position="inside">
                <button name="action_view_installment_invoices"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-dollar"
                        string="Installment Invoices">
                    <field name="installment_invoice_ids" widget="statinfo" string="Invoices"/>
                </button>
            </xpath>
            <xpath expr="//header" position="inside">
            <button name="action_create_installment_invoices"
                    string="Create Installment Invoices"
                    type="object"
                    invisible="installment_invoice_ids or state != 'sale'"
                    class="btn-primary"/>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="payment_plan_id"/>
            </xpath>
            <xpath expr="//notebook" position="inside">
                <page string="Payment Installments">
                    <field name="installment_line_ids" nolabel="1">
                        <list editable="bottom">
                            <field name="installment_no"/>
                            <field name="installment_date"/>
                            <field name="amount"/>
                        </list>
                    </field>
                </page>
            </xpath>

        </field>
    </record>
</odoo>
